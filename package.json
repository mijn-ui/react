{
  "name": "mijn-ui",
  "private": true,
  "scripts": {
    "dev": "pnpm sb",
    "build": "turbo build --filter=!@mijn-ui/docs --filter=!@mijn-ui/storybook",
    "dev:docs": "turbo dev --filter=@mijn-ui/docs",
    "build:docs": "turbo build --filter=@mijn-ui/docs",
    "start:docs": "turbo start --filter=@mijn-ui/docs",
    "sb": "pnpm --filter @mijn-ui/storybook dev",
    "build:sb": "pnpm --filter @mijn-ui/storybook build",
    "start:sb": "pnpm --filter @mijn-ui/storybook start",
    "clean": "turbo clean",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "types:check": "turbo types:check",
    "lint:prettier": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "prettier": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.14.0",
    "@storybook/react": "^8.4.7",
    "@testing-library/react": "^16.1.0",
    "@types/eslint__js": "^8.42.3",
    "esbuild-plugin-preserve-directives": "^0.0.11",
    "eslint": "^9.14.0",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "8.3.5",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "vitest": "^2.1.5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">= 18.17.0"
  }
}
